# Shopify Configuration
PUBLIC_STOREFRONT_API_TOKEN=your_storefront_api_token_here
PUBLIC_STORE_DOMAIN=your-store.myshopify.com
PUBLIC_STOREFRONT_ID=your_storefront_id_here
PUBLIC_CHECKOUT_DOMAIN=your-store.myshopify.com

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# MongoDB Analytics Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=talla_analytics
ANALYTICS_ENABLED=true

# Email Service Configuration (Optional - for restock notifications)
# Choose one of the following:
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# RESEND_API_KEY=your_resend_api_key_here

# Store Configuration
PUBLIC_STORE_URL=https://your-store.com

# Development/Production
NODE_ENV=development
